<!-- Todos page - Navigation bar -->
<section class="todo-view-nav">
  <div class="todo-view-nav-left">
    <i class="fa-solid fa-inbox"></i>
    <p>Inbox</p>
  </div>
  <form onsubmit="event.preventDefault()">
    <i class="fa-solid fa-magnifying-glass"></i>
    <input id="searchBox" type="text" placeholder="Search existing Smart To-Do tasks here">
  </form>
  <div id="nav-categories" class="todo-view-nav-right">
    <i id="to-eat" class="fa-solid fa-utensils"></i>
    <i id="to-read" class="fa-solid fa-book"></i>
    <i id="to-watch" class="fa-solid fa-film"></i>
    <i id="to-buy" class="fa-solid fa-basket-shopping"></i>
  </div>
</section>

<!-- Todos page - Add new task input field -->
<section class="todolist">
  <section class="todo-addTask">
    <form id="todo-form">
      <i class="fa-solid fa-plus"></i>
      <input id="newTodo" name="newTodo" type="text" placeholder="Write a new Smart To-Do task here">
      <input type="submit" hidden />
    </form>
  </section>
  <section id="todos-container"></section>
</section>

