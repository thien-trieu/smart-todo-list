<header>
  <div class="logoSection">
    <a class="logo" href="/">
      <h1 class="logo">Smart To Do</h1>
    </a>
    <i class="fa-solid fa-clipboard"></i>
  </div>
  <nav>
    <% if(!user){ %>
      <a class="btn btn-light mr-2 my-sm-0" href="/login" role="button">Login</a>
      <a class="btn btn-light my-2 my-sm-0" href="/register" role="button">Register</a>
      <% } else{ %>
        <form class="form-inline my-2 my-lg-0" action="/logout" method="post">
          <div class="form-group d-inline-flex">
            <span class="text-light font-weight-normal mr-4">
              Logged in as:
              <span class="text-light font-weight-bold">
                <%= user.name %>
              </span>
            </span>
            <button class="btn btn-light my-2 my-sm-0" type="submit">Logout</button>
          </div>
        </form>
        <% } %>

          <a class="navLinks" href="/login">Login</a>
          <a class="navLinks" href="/register">Register</a>
  </nav>

</header>
