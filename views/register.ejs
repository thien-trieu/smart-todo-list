<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('partials/_meta_tags') %>
    <%- include('partials/_styles') %>
      <%- include('partials/_scripts') %>
        <title>Register</title>
</head>

<body>
  <%- include('partials/_header') %>

    <main class="container">

  <h1 class="signup">Sign Up <i class="fa-solid fa-circle-down fa-bounce"></i></h1>

      <% if(errors) { %>
        <% for (let error in errors) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= errors[error].msg %>
              <!-- <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button> -->
          </div>
          <% } %>
            <% } %>


  <form method="POST"  action="/register">
    <div>
      <label class="menulabels">Your Name:</label>
      <br>
      <input type="text" name="name" class="inputfield">
    </div>
    <br>
    <div>
      <label class="menulabels">Email:</label>
      <br>
      <input type="email" name="email" class="inputfield">
    </div>
    <br>
    <div>
      <label class="menulabels">Password:</label>
      <br>
      <input type="password" name="password" class="inputfield">
    </div>
    <br>
      <button type="submit">Submit</button>
  </form>

  <p class="menulabels">
  Already have an account? <a href="/login">Click here</a>
  </p>

    </main>

</body>

</html>
